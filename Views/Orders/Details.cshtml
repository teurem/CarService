@model digitization.ViewModels.OrdersDetailViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="card md-2">
    <h3 class="card-header local-header grid-text " style="display: flex; justify-content: space-between;">
        Заказы
    </h3>
    
    <div class="card-body local-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col">
                <label asp-for="ClientFIO" class="control-label"></label>
                <input readonly asp-for="ClientFIO" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="ClientPhoneNumber" class="control-label"></label>
                <input readonly asp-for="ClientPhoneNumber" class="form-control" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <label asp-for="CarBrand" class="control-label"></label>
                <input readonly asp-for="CarBrand" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="CarModel" class="control-label"></label>
                <input readonly asp-for="CarModel" class="form-control" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <label asp-for="RepairInstructions" class="control-label"></label>
                <textarea readonly asp-for="RepairInstructions" class="form-control"></textarea>
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" step="any" readonly asp-for="Price" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="Mechanic" class="control-label"></label>
                <input readonly asp-for="Mechanic" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="AutoElectrician" class="control-label"></label>
                <input readonly asp-for="AutoElectrician" class="form-control" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <label asp-for="Walker" class="control-label"></label>
                <input readonly asp-for="Walker" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="Painter" class="control-label"></label>
                <input readonly asp-for="Painter" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="Motorist" class="control-label"></label>
                <input readonly asp-for="Motorist" class="form-control" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <label asp-for="Comment" class="control-label"></label>
                <textarea readonly asp-for="Comment" class="form-control"></textarea>
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <label asp-for="SpareParts" class="control-label"></label>
                <textarea readonly asp-for="SpareParts" class="form-control"></textarea>
            </div>
        </div>
        
        <div class="row form-group">
            <div class="col">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input readonly id="createdAt" class="form-control" />
                <input type="hidden" id="createdAtDateTime" value="@Model.CreatedAt" />
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        var createdAt = document.getElementById('createdAt');

        var dateTime = document.getElementById('createdAtDateTime').value;

        var date = dateTime.split(" ")[0].split(".");
        var time = dateTime.split(" ")[1].split(":");

        var res = date[0] + "-" + date[1] + "-" + date[2] + " " + time[0] + ":" + time[1];
        
        createdAt.value = res;

    </script>
}
